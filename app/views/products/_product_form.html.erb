<!-- app/views/products/_product_form.html.erb -->

<%= form_with model: @product, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control", step: 0.01, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <!-- Keep .d-grid if you're relying on Bootstrap for vertical button sizing -->
  <div class="d-grid">
    <!-- Change the text from default to something like "Create Product" -->
    <!-- Switch to .btn.btn-warning for that gold vibe -->
    <%= form.submit "Create Product", class: "btn btn-warning" %>
  </div>
<% end %>
