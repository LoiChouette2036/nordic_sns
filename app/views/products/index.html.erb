<!-- app/views/products/index.html.erb -->

<div class="products-index-container">
  <!-- Header row with title & create button on same line -->
  <div class="products-header">
    <h1 class="products-title">Products</h1>
    <%= link_to "Create Product", new_product_path, class: "btn btn-success create-product-btn" %>
  </div>

  <!-- Container (grid/list) for product cards -->
  <div class="products-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <!-- If you have an image uploaded, display it -->
        <% if product.image.present? %>
          <%= image_tag product.image, class: "product-image" %>
        <% end %>

        <!-- Basic info block -->
        <div class="product-info">
          <h2 class="product-title"><%= product.title %></h2>
          <p class="product-description"><%= product.description %></p>
          <p>Price: $<%= product.price %></p>
          <p>Quantity: <%= product.quantity %></p>

          <%= link_to "View Product", product_path(product), class: "btn btn-warning" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to Profile", profile_path, class: "btn btn-secondary mt-3" %>

</div>
