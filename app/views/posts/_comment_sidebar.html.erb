<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvas_<%= post.id %>" aria-labelledby="offcanvas_label_<%= post.id %>">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvas_label_<%= post.id %>">Comments</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <!-- Original Post -->
    <div class="card mb-3">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted post-label"><%= post.user.email %></h6>
        <p class="card-text"><%= post.content %></p>
        <small class="text-muted post-label-date"><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></small>
      </div>
    </div>

    <!-- Comment Form -->
    <div class="card mb-3 p-3">
      <%= render "posts/comment_form", post: Post.new, parent_post_id: post.id %>
    </div>

    <!-- Comments List -->
    <div id="comments_<%= post.id %>" class="comments-list">
      <% post.replies.each do |reply| %>
        <%= render "posts/post", post: reply %>
      <% end %>
    </div>
  </div>
</div>
