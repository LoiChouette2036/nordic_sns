<div class="container mt-5">
  <h1>Post</h1>

  <div class="row">
    <!-- Post Creation Form -->
    <div class="col-12">
      <div class="card p-3 mb-3">
        <h5 class="card-title">Create a New Post</h5>
        <%= render "posts/form", post: @post %>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Posts List -->
    <div class="col-12">
      <%= turbo_frame_tag "posts" do %>
        <div class="card p-3" style="max-height: 500px; overflow-y: auto;" id="location-posts">
          <% @posts.each do |post| %>
            <%= render "posts/post", post: post %>
          <% end %>

          <% if @posts.next_page %>
          <div id="posts_load_more" class="text-center mt-3">
            <%= link_to "Load More", posts_path(page: @posts.next_page, format: :turbo_stream), data: { turbo_frame: "posts" }, class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Return to Profile Link -->
  <%= link_to "Return to profile", profile_path, class: "btn btn-secondary mt-3", id: "load-more-button" %>
</div>
