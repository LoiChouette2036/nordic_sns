<div class="profile-container">
  <div class="profile-header">
    <div class="profile-image-wrapper">
      <% if @profile.image.attached? %>
        <%= image_tag @profile.image, alt: @profile.name, style: "max-width: 300px;" %>
      <% else %>
        <div class="default-image">No Image</div>
      <% end %>
    </div>
    <div class="profile-details">
      <h1 class="profile-name"><%= @profile.name %></h1>
      <p class="profile-deity">Patron Deity: <%= @profile.patron_deity %></p>
    </div>
  </div>

  <div class="profile-bio">
    <h2>Bio</h2>
    <p><%= @profile.bio %></p>
  </div>

  <div class="profile-actions">
    <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary" %>
    <%= link_to "Post", posts_path, class: "btn btn-primary" %>
    <%= link_to "View Conversation", conversations_path, class: "btn btn-primary" %>
    <%= link_to "Visit Boutique", products_path, class: "btn btn-primary" %>
  </div>

  <hr>

  <div id="pending-requests" class="profile-requests">
    <h2>Pending Conversation Requests</h2>
    <!-- The pending_request partial is appended here by broadcast_to_receiver -->
  </div>
</div>
