<h1>Profile of <%= @profile.name %></h1>

<p><strong>Bio:</strong> <%= @profile.bio %></p>
<p><strong>Patron Deity:</strong> <%= @profile.patron_deity %></p>

<% if @profile.image.present? %>
  <img src="<%= @profile.image %>" alt="<%= @profile.name %>'s image" style="max-width: 300px; height: auto;">
<% else %>
  <p>No image provided.</p>
<% end %>

<%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary" %><br>
<%= link_to "Post", posts_path, class: "btn btn-primary"%><br>
<%= link_to "View Conversation", conversations_path, class: "btn btn-primary" %>
<%= link_to "Visit Boutique", products_path, class: "btn btn-primary" %>

<hr>

<div id="pending-requests">
  <h2>Pending Conversation Requests</h2>
  <!-- The pending_request partial is appended here by broadcast_to_receiver -->
</div>
